.customer
  .actions
    span = link_to 'x', customer, method: :delete, data: { confirm: 'Are you sure?' }
    span = link_to 'edit', edit_customer_path(customer)
    - if customers_to_call.include?(customer)
      span = link_to 'unflag', remove_from_call_list_path(customer), method: :delete
    - else
      span = link_to 'to call', add_to_call_list_path(customer), method: :post
  h2 = customer.full_name
  - if customer.image.present?
    p = image_tag customer.image, width: 200
  p
    strong Province: 
    - if customer.province.present?
      = customer.province.name
    - else
      | None
  p
    strong Phone number: 
    = customer.phone_number
  p
    strong Email: 
    = mail_to customer.email_address
  p
    strong Notes: 
    = customer.notes
